import pandas as pd
import numpy as np
from matplotlib import pyplot as plt
from matplotlib.pyplot import figure
import seaborn as sns

# Import data from excel files & specifying sheets
data = pd.read_excel('C:/Users/lilak/Documents/Master BMS-O/Research Project 1/Python/Results_Python2.xlsx', sheet_name='Patient_1179')
df = pd.read_excel('C:/Users/lilak/Documents/Master BMS-O/Research Project 1/Python/Results_Python2.xlsx', sheet_name='mOTUs')

# Filter out of the mOTUs the patient ID we are interested in each time
values = data['Patient_ID']
data_bacteria = df[df['Patient_ID'].isin(values)]

# Group by patient_ID & sort read counts in a descending order 
df2=data_bacteria.sort_values('Read_counts',ascending=False).groupby(['Patient_ID'])

# For each group on the column Name replace each taxon name  from the 4rth row on with "others" 
df3=pd.DataFrame(columns=data_bacteria.columns)
for patient, group in df2:
    group.iloc[3:, group.columns.get_loc('Name')] = 'Others'
    df3=df3.append(group,ignore_index=True)
df3.sort_values('Read_counts',ascending=False)

#Sums the reads of each group based on the column name  
df4=df3.groupby(['Patient_ID','Name'])['Read_counts'].sum().reset_index()

#Save the filtered dataframe to a temp file 
df4.to_csv('C:/Users/lilak/Documents/Master BMS-O/Research Project 1/Python/temp.csv', index=False)
